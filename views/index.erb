<h2>Newsletter Sign-Up</h2>

<form id='signup-form'>
  <input type='text' name='fan[name]' placeholder='...name'/></br>
  <input type='text' id='email' name='fan[email]' placeholder='...email'/></br>
  <input type='submit' value='SIGN UP'/>
</form>

<ul id='fan-list'>
  <% @fans.each do |fan| %>
    <li><%= fan.name %></li>
  <% end %>
</ul>
